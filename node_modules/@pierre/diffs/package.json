{
  "name": "@pierre/diffs",
  "version": "1.0.9",
  "type": "module",
  "license": "apache-2.0",
  "scripts": {
    "build": "tsdown --clean",
    "dev": "echo 'Watching for changesâ€¦' && tsdown --watch --log-level error",
    "test": "bun test",
    "tsc": "tsc --noEmit --pretty",
    "prepublishOnly": "bun run build"
  },
  "sideEffects": [
    "src/components/web-components.ts"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./react": {
      "import": "./dist/react/index.js",
      "types": "./dist/react/index.d.ts"
    },
    "./ssr": {
      "import": "./dist/ssr/index.js",
      "types": "./dist/ssr/index.d.ts"
    },
    "./worker": {
      "import": "./dist/worker/index.js",
      "types": "./dist/worker/index.d.ts"
    },
    "./worker/worker.js": {
      "import": "./dist/worker/worker.js",
      "types": "./dist/worker/worker.d.ts"
    },
    "./worker/worker-portable.js": {
      "import": "./dist/worker/worker-portable.js",
      "types": "./dist/worker/worker-portable.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "*": [
        "dist/*"
      ],
      "react": [
        "dist/react/index.d.ts"
      ],
      "ssr": [
        "dist/ssr/index.d.ts"
      ],
      "worker": [
        "dist/worker/index.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "LICENSE.md",
    "README.md"
  ],
  "devDependencies": {
    "@arethetypeswrong/core": "0.18.2",
    "@trivago/prettier-plugin-sort-imports": "6.0.0",
    "@types/hast": "3.0.4",
    "@types/react": "19.2.7",
    "@types/react-dom": "19.2.3",
    "autoprefixer": "10.4.22",
    "postcss": "8.5.6",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "tsdown": "0.15.11",
    "typescript": "5.9.2"
  },
  "dependencies": {
    "@shikijs/core": "^3.0.0",
    "@shikijs/engine-javascript": "^3.0.0",
    "@shikijs/transformers": "^3.0.0",
    "diff": "8.0.2",
    "hast-util-to-html": "9.0.5",
    "lru_map": "0.4.1",
    "shiki": "^3.0.0"
  },
  "peerDependencies": {
    "react": "^18.3.1 || ^19.0.0",
    "react-dom": "^18.3.1 || ^19.0.0"
  }
}
